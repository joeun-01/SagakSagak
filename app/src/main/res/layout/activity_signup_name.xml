<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardcodedText">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/signup_name_arrow_iv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/signup_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40.25dp"

            android:layout_marginHorizontal="20.25dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_name_arrow_iv"
            app:layout_constraintStart_toStartOf="@+id/signup_name_arrow_iv" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/signup_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="이름을 입력해주세요"
            android:textSize="20sp"
            android:inputType="text"
            android:background="@null"
            android:paddingVertical="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20.25dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/signup_name_page_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/3"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/signup_name_pb"
            app:layout_constraintEnd_toEndOf="@id/signup_name_pb"/>

        <ProgressBar
            android:id="@+id/signup_name_pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#B4A4EF"
            android:progress="100"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintBottom_toTopOf="@id/signup_complete_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/signup_complete_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가입완료"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/shape_login_background"
            android:backgroundTint="#B4A4EF"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
